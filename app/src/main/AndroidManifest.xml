<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wadektech.mtihanirevise">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:icon="@mipmap/logoicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Adapter.MainSliderActivity"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Auth.SignUpActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".UI.PastPapersActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".UI.PaperPerSubject"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".PdfViewer.ItemDetailActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".UI.DeveloperProfile"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MessageActivity"></activity>
    </application>

</manifest>