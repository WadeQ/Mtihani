<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/viewForeground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardBackgroundColor="@color/followingBg"
    app:cardElevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:hint="@string/_01_01_2019"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvQuestionBody"
            android:paddingLeft="6dp"
            android:layout_alignParentStart="true"
            android:hint="@string/derrick_asks"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:layout_alignParentLeft="true"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvQuestionBody"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:hint="@string/what_is_algebra"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:paddingStart="6dp"
            tools:ignore="RtlSymmetry" />
    </RelativeLayout>

</android.support.v7.widget.CardView>