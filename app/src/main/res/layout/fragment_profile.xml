<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
   <android.support.v7.widget.CardView
       android:id="@+id/card"
       app:cardElevation="@dimen/_2sdp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="@dimen/_8sdp">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/profile_image"
               android:layout_width="@dimen/_150sdp"
               android:layout_height="@dimen/_150sdp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="@dimen/_5sdp"
               android:src="@drawable/profile" />

           <TextView
               android:id="@+id/username"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/profile_image"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="0dp"
               android:layout_marginTop="@dimen/_10sdp"
               android:gravity="center"
               android:hint="@string/username"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="@dimen/_16ssp"
               android:textStyle="bold" />

       </RelativeLayout>

   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sta"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="@color/headings"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/status_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColorHint="@color/colorPrimary"
                android:hint="@string/def_status_banner"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_155sdp"
        android:layout_below="@+id/card2"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/update"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_above="@+id/tv"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tap" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_78sdp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="@string/update_your_status"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                tools:ignore="UnknownId"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_78sdp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>