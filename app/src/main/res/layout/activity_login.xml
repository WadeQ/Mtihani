<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:ignore="contentDescription"
    tools:context=".auth.SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/tree"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_235sdp"
        android:paddingRight="@dimen/_35sdp"
        android:paddingLeft="@dimen/_35sdp"
        android:orientation="vertical"
        tools:ignore="NotSibling"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/password"
            app:passwordToggleEnabled="true"
            android:inputType="textPassword"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingStart="@dimen/_25sdp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15ssp"
            app:fontFamily="sans-serif-light"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_35sdp"
        android:paddingRight="@dimen/_35sdp"
        tools:ignore="NotSibling"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingStart="@dimen/_25sdp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15ssp"
            app:fontFamily="sans-serif-light" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_37sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_169sdp"
        android:background="@drawable/btn_bg"
        android:text="@string/login"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:fontFamily="@string/font" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_137sdp"
        android:text="@string/not_yet_registered"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:fontFamily="@string/font" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_37sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_86sdp"
        android:background="@drawable/btn_bg"
        android:text="@string/sign_up"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:fontFamily="@string/font" />

    <Button
        android:id="@+id/tv_google_login"
        style="@style/allBlueButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/button_bg"
        android:drawableStart="@drawable/google_login_bg"
        android:paddingStart="@dimen/_16sdp"
        android:text="@string/login_with_google"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_20ssp"
        android:drawableLeft="@drawable/google_login_bg"
        android:paddingLeft="@dimen/_16sdp"
        tools:ignore="RtlSymmetry" />

</RelativeLayout>